<div
  class="wrapper-parent relative flex min-h-screen pt-[380px] flex-col items-center justify-center overflow-hidden bg-body w-full rounded-md z-0"
>
  <div
    class="wrapper-child relative flex w-full flex-1 scale-y-125 items-center justify-center isolate z-0"
  >
    <div
      style={{
        backgroundImage: `conic-gradient(var(--conic-position), var(--tw-gradient-stops))`,
      }}
      class="width absolute inset-auto right-1/2 h-56 overflow-visible w-[30rem] bg-gradient-conic from-accent via-transparent to-transparent text-white [--conic-position:from_70deg_at_center_top]"
    >
      <div
        class="absolute w-[100%] left-0 bg-body h-40 bottom-0 z-20 [mask-image:linear-gradient(to_top,white,transparent)]"
      >
      </div>
      <div
        class="absolute w-40 h-[100%] left-0 bg-body bottom-0 z-20 [mask-image:linear-gradient(to_right,white,transparent)]"
      >
      </div>
    </div>
    <div
      style={{
        backgroundImage: `conic-gradient(var(--conic-position), var(--tw-gradient-stops))`,
      }}
      class="width absolute inset-auto left-1/2 h-56 w-[30rem] bg-gradient-conic from-transparent via-transparent to-accent text-white [--conic-position:from_290deg_at_center_top]"
    >
      <div
        class="absolute w-40 h-[100%] right-0 bg-body bottom-0 z-20 [mask-image:linear-gradient(to_left,white,transparent)]"
      >
      </div>
      <div
        class="absolute w-[100%] right-0 bg-body h-40 bottom-0 z-20 [mask-image:linear-gradient(to_top,white,transparent)]"
      >
      </div>
    </div>
    <div
      class="absolute top-1/2 h-48 w-full translate-y-12 scale-x-150 bg-body blur-2xl"
    >
    </div>
    <div
      class="absolute top-1/2 z-50 h-48 w-full bg-transparent opacity-10 backdrop-blur-md"
    >
    </div>
    <div
      class="absolute inset-auto z-50 h-36 w-[28rem] -translate-y-1/2 rounded-full bg-accent opacity-50 blur-3xl"
    >
    </div>
    <div
      class="absolute inset-auto z-30 h-36 w-64 -translate-y-[6rem] rounded-full bg-accent blur-2xl"
    >
    </div>
    <div
      class="width absolute inset-auto z-50 h-0.5 w-[30rem] -translate-y-[7rem] bg-accent"
    >
    </div>

    <div
      class="absolute inset-auto z-40 h-44 w-full -translate-y-[12.5rem] bg-body"
    >
    </div>
  </div>
  <div class="relative z-50 flex -translate-y-20 flex-col items-center px-5">
    <slot />
  </div>
</div>
<style>
  .wrapper-parent {
    view-timeline-name: --lamp-wrapper;
    view-timeline-axis: block;
  }
  .width {
    animation: lampAnimation auto linear;
    animation-timeline: --lamp-wrapper;
    animation-range: entry 0% cover 100%;
  }

  @keyframes lampAnimation {
    from {
      width: 15rem;
    }
    to {
      width: 30rem;
    }
  }
</style>
